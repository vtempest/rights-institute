{
  "include": [
    "../app/components/**/*"
   ],
  "compilerOptions": {
    "jsx": "react",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "strict": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
 
  "exclude": [
    "../node_modules",
    "../docs",
    "pages/**/*"
  ]
}
